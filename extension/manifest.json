{
  "manifest_version": 3,
  "name": "Python-Powered Gmail Assistant",
  "version": "1.0",
  "description": "Quickly use contacts and templates in Gmail, powered by a local Python backend.",
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "https://mail.google.com/",
    "http://127.0.0.1:5000/*" 
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}